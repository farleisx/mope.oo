// RVC Modpack 3.0 - client.js
console.log("RVC Modpack 3.0 client loaded!");

// Add a floating status box
(function() {
    const statusBox = document.createElement('div');
    statusBox.style.position = 'fixed';
    statusBox.style.top = '10px';
    statusBox.style.right = '10px';
    statusBox.style.backgroundColor = 'rgba(0,0,0,0.7)';
    statusBox.style.color = '#fff';
    statusBox.style.padding = '8px';
    statusBox.style.borderRadius = '8px';
    statusBox.style.zIndex = '9999';
    statusBox.innerText = 'RVC Mod Active';
    document.body.appendChild(statusBox);

    // Update box with current mouse position
    window.addEventListener('mousemove', (e) => {
        statusBox.innerText = `RVC Mod Active\nMouse: (${e.clientX}, ${e.clientY})`;
    });
})();

// Hook into the game loop (example, non-intrusive)
if (window.requestAnimationFrame) {
    const originalRAF = window.requestAnimationFrame;
    window.requestAnimationFrame = function(callback) {
        // Inject code before each frame
        return originalRAF.call(window, callback);
    };
}

// Custom feature example
function customFeature() {
    console.log('Custom feature triggered!');
}

// Trigger example feature after 3 seconds
setTimeout(customFeature, 3000);
